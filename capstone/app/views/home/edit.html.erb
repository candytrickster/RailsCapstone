  <% if @log == true %>
      <div id="logout">
        <a href="/">Log out</a>
      </div>
  <% end %>
  <h1 id="message"><%= @message %></h1>
  <nav>
    <% if @log == true %>
        <ul>
          <li><a href="/home">Home</a></li>
          <li><a href="/vendors">Vendors</a></li>
