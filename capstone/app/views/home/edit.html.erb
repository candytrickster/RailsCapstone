<body>
  <section id="edit">
    <form accept-charset="UTF-8" action="/editCountdown" method="post">
      <input name="utf8" type="hidden" value="&#x2713;">
      <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
      <input class="form-control" id="date"
             name="date" type="text" value="<%= cookies['user_date'] %>"/>
      <br>
      <input class="go" name="submit" type="submit"
             value="Update" />
    </form>
    <a id="back" href="/home">Back</a>

  </section>
