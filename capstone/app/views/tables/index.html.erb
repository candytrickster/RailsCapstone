<h1>Listing tables</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Id</th>
      <th>Name</th>
      <th>Kind</th>
      <th>Size</th>
      <th>Position</th>
      <th>Num of seats</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tables.each do |table| %>
      <tr>
        <td><%= table.user_id %></td>
        <td><%= table.id %></td>
        <td><%= table.name %></td>
        <td><%= table.kind %></td>
        <td><%= table.size %></td>
        <td><%= table.position %></td>
        <td><%= table.num_of_seats %></td>
        <td><%= link_to 'Show', table %></td>
        <td><%= link_to 'Edit', edit_table_path(table) %></td>
        <td><%= link_to 'Destroy', table, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

